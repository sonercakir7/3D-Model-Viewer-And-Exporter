<Window x:Class="ThreeDModelViewerAndExporter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Settings_Title}" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="{DynamicResource Settings_Language}" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox x:Name="LanguageComboBox" Margin="0,0,0,15" SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBoxItem Content="English" Tag="en-US"/>
                    <ComboBoxItem Content="Türkçe" Tag="tr-TR"/>
                    <ComboBoxItem Content="Deutsch" Tag="de-DE"/>
                    <ComboBoxItem Content="Français" Tag="fr-FR"/>
                </ComboBox>

                <TextBlock Text="{DynamicResource Settings_CameraSense}" FontWeight="Bold" Margin="0,0,0,5"/>
                <DockPanel Margin="0,0,0,15">
                    <TextBlock Text="{Binding Value, ElementName=SenseSlider, StringFormat=N1}" DockPanel.Dock="Right" Width="30" Margin="5,0,0,0"/>
                    <Slider x:Name="SenseSlider" Minimum="0.1" Maximum="5.0" Value="1.0"/>
                </DockPanel>

                <CheckBox x:Name="FPSCheckBox" Content="{DynamicResource Settings_ShowFPS}" Margin="0,0,0,15" FontSize="14"/>

                <TextBlock Text="{DynamicResource Settings_GridOpacity}" FontWeight="Bold" Margin="0,0,0,5"/>
                <Slider x:Name="GridOpacitySlider" Minimum="0" Maximum="1" Value="0.5" Margin="0,0,0,15"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="{DynamicResource Settings_Save}" Click="Save_Click" Padding="20,5" Margin="5,0"/>
        </StackPanel>
    </Grid>
</Window>