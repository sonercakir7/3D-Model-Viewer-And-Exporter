<Window x:Class="ThreeDModelViewerAndExporter.ModelInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Teknik Bilgileri" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="InfoTextBox" IsReadOnly="True" Background="Transparent" 
                     Foreground="{DynamicResource WindowForegroundBrush}" BorderThickness="0"
                     TextWrapping="Wrap" FontFamily="Consolas" FontSize="12"/>
        </ScrollViewer>
    </Grid>
</Window>